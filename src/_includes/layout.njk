    <section id="role">
      <nav aria-label="Primary">
        <ul>
          {% for item in navigation[page.lang] %}
          <li>
            <a href="{{ item.url }}">{{ item.text }}</a>
          </li>
          {% endfor %}
        </ul>
      </nav>
      <div>
        <p>{{ french.name }}</p>
        <h1 itemprop="name" content="Lionel Pinheiro"><span itemprop="givenName">Lionel</span><span
          itemprop="familyName">Pinheiro</span>
        </h1>
        <h2>{{ french.jobTitle }}</h2>
      </div>
      <div>
        <div id="contact">
          <p><span>Email: </span><a href="mailto:lionel.duarte.p@gmail.com">lionelpinhero@gmail.com</a></p>
          <p><span>Site: </span><a href="lionelpinheiro.com">lionelpinheiro.com</a></p>
        </div>
        <ul id="social">
          <li><ion-icon name="logo-linkedin"></ion-icon><a href="https://www.linkedin.com/in/lionel-pinheiro/"
              target="_blanck">@lionel-pinheiro</a></li>
          <li><ion-icon name="logo-github"></ion-icon><a href="https://github.com/Liopin" target="_blanck"></i>@liopin</a></li>
          <li><ion-icon name="logo-twitter"></ion-icon><a href="https://twitter.com/Lionelpinheiro_"
              target="_blanck"></i>@lionelpinheiro_</a></li>
        </ul>
      </div>
    </section>
  </header>
</body>
</html>
